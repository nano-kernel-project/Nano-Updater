<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Nano.Dark.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Material attributes -->
        <item name="colorPrimary">@color/nano_grey_900</item>
        <item name="colorPrimaryVariant">@color/nano_grey_900</item>
        <item name="colorSecondary">@color/nano_green_300</item>
        <item name="colorSecondaryVariant">@color/nano_green_500</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorError">@color/nano_pink_300</item>
        <item name="colorSurface">@color/nano_grey_900</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnError">@color/nano_pink_300</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="emphasisMediumAlpha">0.60</item>

        <!-- Material shape attributes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Nano.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Nano.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Nano.LargeComponent</item>

        <!-- SnackBar -->
        <item name="snackbarButtonStyle">@style/Widget.Nano.SnackBar.Button</item>
    </style>

    <!-- Splash -->
    <style name="Theme.Nano.Splash" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_nano_splash</item>
    </style>
</resources>